<%= form_for(@news) do |f| %>
  <% if @news.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@news.errors.count, "error") %> prohibited this news from being saved:</h2>

      <ul>
      <% @news.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, :style => "width: 100%;" %>
  </div>
  <div class="field">
    <%= f.label :author %><br>
    <%= f.text_field :author, :style => "width: 100%;"  %>
  </div>
  <div class="field">
    <%= f.label :publish_date %><br>
    <%= f.text_field :publish_date, :value => Time.now, :style => "width: 100%;"  %>
  </div>  
  <div class="field">
    <%= f.label :lang_id %><br>
    <%= f.text_field :lang_id %>
  </div>
  <div class="field" id="short_news">
    <%= f.label :short_news %><br>
    <%= f.text_area :short_news, :style => 'width: 100%; height: 250px' %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body, :style => 'width: 100%; height: 500px' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<script src="/assets/tiny_mce/tinymce_init.js" type="text/javascript"></script>
